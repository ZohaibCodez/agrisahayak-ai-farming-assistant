rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read files in their own reports folder
    match /reports/{userId}/{reportId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload and read files in their own profile folder
    match /profiles/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read access to uploaded images (optional)
    match /public/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
